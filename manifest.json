{
  "manifest_version": 2,
  "name": "Automarks",
  "version": "1.0.0",
  "description": "Automatically sorts bookmarks.",

  "author": "Stephen Goeppele",
  "homepage_url": "https://github.com/goeppes/automarks",

  "permissions": [
    "bookmarks",
    "storage"
  ],

  "browser_action": {
    "browser_style": true,
    "default_title": "Automarks",
    "default_popup": "popup.html"
  },

  "options_ui": {
    "page": "options.html"
  },

  "background": {
    "scripts": ["automarks.js"]
  }
}
